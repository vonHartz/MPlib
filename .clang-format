BasedOnStyle: Google
ColumnLimit: 88

# Write pointer / reference as "int &foo" instead of "int& foo"
DerivePointerAlignment: false
PointerAlignment: Right

# Write cv-qualifiers as "const std::string" instead of "std::string const"
QualifierAlignment: Left

IncludeCategories:
- Regex:           '^<.*\.(h|hpp)>'
  Priority:        2
- Regex:           '^<.*/.*>'
  Priority:        2
- Regex:           '^<.*>'
  Priority:        1
- Regex:           '.*'
  Priority:        3

LineEnding: LF
SeparateDefinitionBlocks: Always
SpaceBeforeCpp11BracedList: true
